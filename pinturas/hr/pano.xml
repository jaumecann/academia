<krpano bgcolor="0x000000">

	<!-- the skin and the flat pano viewing and controlling setup -->
	<include url="../skin/defaultskin.xml" />
	<include url="../skin/flatpano_setup.xml" />
	
	<!-- preview pano image -->
	<preview url="tiles/preview.jpg" />

	<!-- pano image -->
	<image type="CYLINDER" hfov="1.00" vfov="1.000000" voffset="0.00" multires="true" tilesize="512">
		<level tiledimagewidth="3072" tiledimageheight="3072">
			<cylinder url="tiles/l4/%v/l4_%v_%h.jpg" />
		</level>
		<level tiledimagewidth="1536" tiledimageheight="1536">
			<cylinder url="tiles/l3/%v/l3_%v_%h.jpg" />
		</level>
		<level tiledimagewidth="768" tiledimageheight="768">
			<cylinder url="tiles/l2/%v/l2_%v_%h.jpg" />
		</level>
		<level tiledimagewidth="256" tiledimageheight="256">
			<cylinder url="tiles/l1/%v/l1_%v_%h.jpg" />
		</level>
	</image>

	<hotspot name="info" type="image" url="../../img/infopoint.png" width="30" height="30" ath="-0.2" atv="-0.1" onclick="myaction"></hotspot>
	
	

<action name="myaction" type="Javascript">

	</action>

	
</krpano>
